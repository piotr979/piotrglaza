				<li>
					<a href="{{ path('admin')}}" class="transition-all hover:text-black hover:border-b-2 border-black">Admin</a>
				</li>
					<li>
						<a href="{{ path('app_logout') }}" class="lg:bg-button-secondary btn-basic">Logout</a>
					</li>
				{% else  %}
					<li>
						<a href="{{ path('app_login') }}" class="bg-transparent lg:bg-button-primary btn-basic">Login</a>
