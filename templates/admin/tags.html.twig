{% block body %}
	<div class="lg:container mr-4 lg:mx-auto">
		<h1 class="my-4">Tags</h1>
		<div class="overflow-scroll">
			<table class="table-auto border-spacing-2 border-collapse border border-main-dark-shade-1 w-full md:w-fit text-left">
				<tr class="bg-primary-shade-1 text-black">
					{# sorting of properties based on query components #}
					<th class="ps-2">{{ knp_pagination_sortable(pagination, 'Id', 't.id') }}</th>
					<th {% if pagination.isSorted('t.name') %} class="sorted" {% endif %}>
						{{ knp_pagination_sortable(pagination, 'Title', 'a.name') }}
					</th>
					<th class="text-center">
					Ops
					</th>
				</tr>

				{# table body #}
				{% for tag in pagination %}
					<tr {% if loop.index is odd %} class="bg-main-dark-shade-1" {% endif %}>
						<td class="ps-2">{{ tag.id }}</td>
						<td>{{ tag.name }}</td>
						<td class="pe-2">
							<div class="flex flex-row items-center justify-between w-full">
								<a href="{{ path('admin_tag_edit', { 'id': tag.id }) }}" class="btn-basic bg-button-ternary">EDT</a>
								<a href="{{ path('admin_tag_delete', { 'id': tag.id }) }}" class="btn-basic bg-button-secondary ms-2">DEL</a>
							</div>
						</td>
					</tr>
				{% endfor %}
			</table>
			{# display navigation #}
		</div>
		<div class="navigation mt-4">
			{{ knp_pagination_render(pagination) }}
		</div>

		
